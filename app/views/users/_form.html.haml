= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label 'Фамилия Имя Отчество'
    = f.text_field :name
  .field
    = f.label 'Желаемая зарплата'
    = f.number_field :salary
  .field
    = f.label 'Контактные данные'
    = f.text_field :contact
  .field
    = f.label 'Ищу работу'
    = f.check_box :status
  .skills
    = render "shared/skills", f: f
  .actions
    = f.submit 'Сохранить', class: "btn btn-default"
